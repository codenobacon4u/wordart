<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".collaborativeArt.DashboardActivity">

    <TextView
        android:id="@+id/descriptionOfSearch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/search_description" />

    <SearchView
        android:id="@+id/searchMemoirs"
        android:layout_width="409dp"
        android:layout_height="57dp"
        android:layout_marginBottom="1dp">

    </SearchView>

    <ListView
        android:id="@+id/listMemoirs"
        android:layout_width="409dp"
        android:layout_height="600dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonAddMemoir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/add_memoir_string"
        app:srcCompat="@android:drawable/ic_input_add" />

</LinearLayout>